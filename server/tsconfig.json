{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es3",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "node_modules/*",
        "types/*"
      ]
    },
    "lib": [
      "es2015", "es5", "es6", "dom"
    ]
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client"
  ]
}