{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "maxNodeModuleJsDepth": 2,
    "jsx": "preserve",
    "baseUrl": ".",
    "incremental": true
  },
  "typeRoots": [
    "./node_modules/@types",
    "./src/types",
    "./src"
  ],
  "include": [
    "pages"
  ],
  "exclude": [
    "dist",
    "node_modules",
    ".vscode",
    "coverage",
    ".npm",
    ".yarn",
    "build",
    "build-config",
    "public"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "react",
      "react-dom",
      "jest",
      "testing-library__jest-dom"
    ]
  }
}
